<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E25A2D"
    tools:context=".menu">

    <TextView
        android:id="@+id/Menu"
        android:layout_width="157dp"
        android:layout_height="65dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Pizzas"
        android:textColor="@android:color/black"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/menuUser"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Menu">

        <ImageView
            android:id="@+id/hawaiianPizzaPic"
            android:layout_width="212dp"
            android:layout_height="191dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/hawaiian_pizza" />

        <ImageView
            android:id="@+id/pepperoniPizzaPic"
            android:layout_width="196dp"
            android:layout_height="194dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/pepperoni_pizza" />

        <ImageView
            android:id="@+id/mexicanPizzaPic"
            android:layout_width="203dp"
            android:layout_height="219dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/mexicanpizza" />

        <ImageView
            android:id="@+id/cheesePizzaPic"
            android:layout_width="198dp"
            android:layout_height="217dp"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/cheesepizza" />

    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
